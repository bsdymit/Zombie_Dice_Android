<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:columnCount="1"
	android:rowCount="4">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_column="0"
		android:layout_row="0">

		<TextView
			android:layout_height="wrap_content"
			android:text="Medium Text"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:id="@+id/activitygameTextView1"
			android:layout_centerHorizontal="true"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:layout_below="@id/activitygameTextView1"
			android:layout_centerHorizontal="true"/>

	</RelativeLayout>

	<GridLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		rowCount="1"
		columnCount="1"
		android:columnCount="2"
		android:rowCount="1"
		android:layout_column="0"
		android:layout_row="1">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="0"
			android:layout_gravity="left"
			android:layout_marginLeft="20dp">

			<ImageView
				android:layout_height="80dp"
				android:layout_width="80dp"
				android:src="@android:drawable/ic_delete"
				android:id="@+id/activitygameImageView1"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Medium Text"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_below="@id/activitygameImageView1"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="1"
			android:layout_row="0"
			android:layout_gravity="right"
			android:layout_marginRight="20dp">

			<ImageView
				android:layout_height="80dp"
				android:layout_width="80dp"
				android:src="@android:drawable/ic_delete"
				android:id="@+id/activitygameImageView2"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Medium Text"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:layout_below="@id/activitygameImageView2"/>

		</RelativeLayout>

	</GridLayout>

	<GridLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		rowCount="1"
		columnCount="1"
		android:layout_row="2"
		android:layout_column="0"
		android:columnCount="2"
		android:rowCount="1">

		<ImageView
			android:layout_height="270dp"
			android:layout_width="100dp"
			android:src="@android:drawable/ic_delete"
			android:layout_column="0"
			android:layout_row="0"
			android:layout_marginLeft="10dp"/>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="1"
			android:layout_row="0"
			android:layout_gravity="right"
			android:layout_marginRight="10dp">

			<Button
				android:layout_height="170dp"
				android:text="Button"
				android:layout_width="100dp"
				android:id="@+id/activitygameButton1"/>

			<Button
				android:layout_height="100dp"
				android:text="Button"
				android:layout_width="100dp"
				android:layout_below="@id/activitygameButton1"/>

		</RelativeLayout>

	</GridLayout>

	<Button
		android:layout_height="wrap_content"
		android:text="Button"
		android:layout_width="match_parent"
		android:layout_row="3"
		android:layout_column="0"/>

</GridLayout>

